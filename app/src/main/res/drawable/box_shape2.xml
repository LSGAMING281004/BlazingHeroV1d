<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow effect -->
    <item android:right="4dp" android:left="4dp" android:top="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#FF1616"/> <!-- Light gray color for shadow -->
            <corners android:radius="4dp"/> <!-- Rounded corners for shadow -->
        </shape>
    </item>

    <!-- Box with gradient and border -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#04FF4100"
            android:endColor="#FFFFFF"
            android:angle="135"/>
            <stroke android:width="2dp" android:color="#000000"/> <!-- Black border line -->
            <corners android:radius="0dp"/> <!-- No rounded corners, perfect square -->
        </shape>
    </item>
</layer-list>
